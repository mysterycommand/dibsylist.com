<h1>Listing users</h1>

<table>
  <tr>
    <th id="user_name"></th>
    <th id="user_email"></th>
    <th id="user_auths"></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td headers="user_name"><%= user.name %></td>
    <td headers="user_email"><%= mail_to user.email, user.email %></td>
    <td headers="user_auths">
      <ul>
        <% user.auths.each do |auth| %>
        <li><%= auth.provider.capitalize %></li>
        <% end %>
      </ul>
    </td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

